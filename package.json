{
  "name": "proyecto-cli",
  "type": "module",
  "version": "2.5.0",
  "description": "Proyecto is a lightweight CLI tool for managing local projects",
  "author": {
    "name": "Glory Wong",
    "email": "glorywong1001@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/GloryWong/proyecto#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GloryWong/proyecto.git"
  },
  "bugs": {
    "url": "https://github.com/GloryWong/proyecto/issues"
  },
  "keywords": [
    "project",
    "cli",
    "command line interface",
    "pro",
    "manage",
    "create",
    "clone",
    "git",
    "github"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "bin": {
    "proyecto": "./cli.ts"
  },
  "scripts": {
    "cli": "NODE_ENV=development bun cli.ts",
    "compile": "bun build --compile --minify --asset-naming='[name].[ext]' --outfile=dist/proyecto cli.ts",
    "prepare": "bun simple-git-hooks",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "coverage": "bun test --coverage"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@inquirer/confirm": "^5.1.18",
    "@inquirer/input": "^4.2.4",
    "@inquirer/search": "^3.1.3",
    "chalk": "^5.6.2",
    "conf": "^13.1.0",
    "env-paths": "^3.0.0",
    "fs-extra": "^11.3.2",
    "fuzzysort": "^3.1.0",
    "iso-timestamp": "^1.2.0",
    "minimist": "^1.2.8",
    "open-editor": "^5.1.0",
    "trash": "^9.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.4.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.18.6",
    "eslint": "^9.36.0",
    "lint-staged": "^16.2.3",
    "simple-git-hooks": "^2.13.1",
    "type-fest": "^4.41.0"
  },
  "simple-git-hooks": {
    "pre-commit": "bun lint-staged",
    "commit-msg": "bun commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "bun lint:fix"
  }
}
