{
  "name": "proyecto-cli",
  "type": "module",
  "version": "2.3.1",
  "description": "Proyecto is a lightweight CLI tool for managing local projects",
  "author": {
    "name": "Glory Wong",
    "email": "glorywong1001@gmail.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/GloryWong/proyecto#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GloryWong/proyecto.git"
  },
  "bugs": {
    "url": "https://github.com/GloryWong/proyecto/issues"
  },
  "keywords": [
    "project",
    "cli",
    "command line interface",
    "pro",
    "manage",
    "create",
    "clone",
    "git",
    "github"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "bin": {
    "proyecto": "./cli.ts"
  },
  "scripts": {
    "cli": "NODE_ENV=development bun cli.ts",
    "compile": "bun build --compile --minify --asset-naming='[name].[ext]' --outfile=dist/proyecto cli.ts",
    "prepare": "bun simple-git-hooks",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "coverage": "bun test --coverage"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@inquirer/confirm": "^5.1.11",
    "@inquirer/input": "^4.1.11",
    "@inquirer/search": "^3.0.14",
    "chalk": "^5.4.1",
    "conf": "^13.1.0",
    "env-paths": "^3.0.0",
    "fs-extra": "^11.3.0",
    "fuzzysort": "^3.1.0",
    "iso-timestamp": "^1.2.0",
    "minimist": "^1.2.8",
    "open-editor": "^5.1.0",
    "trash": "^9.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.13.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.15.21",
    "eslint": "^9.27.0",
    "lint-staged": "^16.0.0",
    "simple-git-hooks": "^2.13.0",
    "type-fest": "^4.41.0"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm commitlint --edit ${1}"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
